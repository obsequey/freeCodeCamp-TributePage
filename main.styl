bgcolor = #ebedef
font = 'Open Sans', sans-serif

*
  padding: 0
  margin 0
html
  font-size 13px
  padding 2rem .5rem
  font-family font
.container
  background-color bgcolor
  padding 2rem
  border-radius 3px
  text-align center
  &__who
    margin 1rem
  &__photo
    background-color white
    padding .5rem
    border-radius 3px
    img
      width 100%
    &__about
      background-color inherit
      padding .7rem .5rem
  &__timeline
    max-width 590px
    margin 2rem auto
    &__header
      font-size 1.5rem
      font-weight bold
    &__list
      text-align left
      margin 2rem 0
      &__item
        margin .5rem
  &__quote
    font-style italic
    footer
      margin 2rem
  &__more
    font-weight bold
    font-size 1.2rem